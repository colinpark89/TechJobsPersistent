@model TechJobsPersistent.ViewModels.AddJobViewModel

<h1>Add a Job</h1>

<form asp-controller="Home" asp-action="ProcessAddJobForm" method="post">
    <div class="form-group">
        <label>Name</label>
        <input class="form-control" asp-for="Name" />
        <span></span>
    </div>

    <div class="form-group">
        <label asp-for="EmployerId">Employer</label>
        <select asp-for="EmployerId" asp-items="Model.Employers"></select>
        <span asp-validation-for="Employers"></span>
        <a asp-controller="Employer" asp-action="Add">Add an Employer</a>
    </div>

    <div class="form-group">
        <label asp-for="Skills">Skills</label>
        @if (Model.Skills == null)
        {
            <p>No Skills Available</p>
        }
        @foreach (var skill in Model.Skills)
        {
            <input type="checkbox" name="selectedSkills" value="@skill.Id" />
            <label>@skill.Name</label>
        }
        <a asp-controller="Skill" asp-action="Add">Add a Skill</a>
        <span asp-validation-for="Skills"></span>
    </div>

    <input type="submit" value="Add Job" />
</form>

